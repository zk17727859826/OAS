@{
    ViewBag.Title = "驾校管理";
}
<div data-options="region:'north',border:false" style="height:93px;">
    <div class="queryframe">
        <table>
            <tr>
                <td>驾校名称：</td>
                <td>
                    <input type="text" name="userno" id="userno" class="textbox ui-box" />
                </td>
                <td>区域：</td>
                <td>
                    @Html.Action("Select", "Area", new { name = "ddlareano", id = "ddlareano", classname = "textbox easyui-combobox" })
                </td>
                <td>
                    <a href="#" class="easyui-linkbutton" id="btnQuery" data-options="iconCls:'icon-search'" style="width:80px">Search</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">@Html.Raw(ViewBag.ToolBar)</div>
</div>
<div data-options="region:'center',border:false">
    <table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>
</div>
<div id="editframe"></div>
<div id="passwordframe"></div>

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Content/jiax/jiax.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            initQuery();
            initRefresh();
            initShowAdd();
            initShowUpdate();
            initDelete();
        });
    </script>
}
